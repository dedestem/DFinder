{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "dfinder",
    "version": "0.3.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "DFinder",
        "width": 800,
        "height": 600,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:;"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "net.davidnet.dfinder",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
